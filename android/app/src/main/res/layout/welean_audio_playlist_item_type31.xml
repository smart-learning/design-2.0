<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/PLAYLISTITEM"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/last_view_list_background_color"
    >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="66dp">

            <LinearLayout
                android:layout_width="52dp"
                android:layout_height="20dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="8dp"
                android:orientation="vertical"
                android:background="#872f40">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:layout_gravity="center_horizontal|center"
                    android:lineSpacingExtra="0sp"

                    android:text="미리듣기"
                    android:textColor="#ffffff"
                    />

            </LinearLayout>

            <TextView
                android:text="동영상타이틀"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/titleTxt"
                android:textSize="16sp"
                android:textColor="#ff4f72"
                android:lineSpacingExtra="4sp"
                android:paddingLeft="20dp"
                android:paddingTop="35dp"
                android:paddingBottom="11dp"
                android:layout_marginLeft="7dp"
                android:layout_weight="7"
                android:layout_gravity="center|center_horizontal"
                />

            <ImageView
               android:id="@+id/playbtnimageview"
               android:layout_width="20dp"
               android:layout_height="20dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="11dp"
               android:background="@drawable/icon_audiobook_play_filled" />

            <TextView
                android:text="00:00:00"
                android:paddingLeft="10dp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/totalTime"
                android:layout_gravity="bottom"
                android:layout_marginBottom="5dp"
                android:paddingRight="1dp"
                 />

        </LinearLayout>

</LinearLayout>

