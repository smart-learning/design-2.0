        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/welean_audio_mode_bg">
    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:gravity="bottom"
        android:id="@+id/SLEEPWRAP_LAYOUT_LAND"
