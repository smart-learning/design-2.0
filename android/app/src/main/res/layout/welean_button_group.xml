                    <TextView
                        android:id="@+id/sleeptext15_land"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:text="15분"
                        android:gravity="center_horizontal|center"
                        android:background="@drawable/sleep_textview_selector"
                        android:textSize="15sp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp">
                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="1dp"
                            android:layout_marginLeft="17.8dp"
                            android:layout_marginRight="17.8dp"
                            android:background="@color/media_controller_sleepmode_subtitle_line" />
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@color/media_controller_sleepmode_subtitle_off">

                    <TextView
                        android:id="@+id/sleeptext30_land"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:text="30분"
                        android:gravity="center_horizontal|center"
                        android:background="@drawable/sleep_textview_selector"
                        android:textSize="15sp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp">
                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="1dp"
                            android:layout_marginLeft="17.8dp"
                            android:layout_marginRight="17.8dp"
                            android:background="@color/media_controller_sleepmode_subtitle_line" />
                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/sleeptext45_land"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="45분"
                    android:gravity="center_horizontal|center"
                    android:background="@drawable/sleep_textview_selector"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/sleeptext60_land"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="1시간"
                    android:gravity="center_horizontal|center"
                    android:background="@drawable/sleep_textview_selector"
                    android:textSize="15sp" />
            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/SLEEPWRAP_LAYOUT"
        android:layout_width="match_parent"
        android:layout_height="@dimen/subtitls_longview_height"
        android:layout_above="@+id/CONTROL_WRAP_BG"
        android:layout_gravity="center"
        android:gravity="bottom"
        android:visibility="invisible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/media_controller_sleepmode_title"
                android:gravity="center_horizontal|center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/icon_timmer"
                    android:clickable="false" />

                <TextView
                    android:id="@+id/sleeptextTitle"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:text="Sleep Timer"
                    android:textSize="13sp" />

                <ImageView
                    android:id="@+id/sleepCancelButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/icon_player_close_pressed"
                    android:gravity="center_horizontal|center" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/media_controller_sleepmode_subtitle_off"

                android:orientation="vertical">

                <TextView
                    android:id="@+id/sleeptext15"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/sleep_textview_selector"
                    android:gravity="center_horizontal|center"
                    android:text="15분"
                    android:textSize="15sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp">

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@color/media_controller_sleepmode_subtitle_line" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/sleeptext30"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/sleep_textview_selector"
                    android:gravity="center_horizontal|center"
                    android:text="30분"
                    android:textSize="15sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp">

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@color/media_controller_sleepmode_subtitle_line" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/sleeptext45"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/sleep_textview_selector"
                    android:gravity="center_horizontal|center"
                    android:text="45분"
                    android:textSize="15sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp">

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@color/media_controller_sleepmode_subtitle_line" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/sleeptext60"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/sleep_textview_selector"
                    android:gravity="center_horizontal|center"
                    android:text="1시간"
                    android:textSize="15sp" />

            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ARROW_LAYOUT"

        android:layout_above="@+id/CONTROL_WRAP_BG"
        >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/arrow_button_g">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_weight="5">

                <Button
                    android:id="@+id/leftArrowButton"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:background="@drawable/camera_retake_2_left"
                    android:layout_gravity="left"
                    android:alpha="0.27"
                    android:layout_marginLeft="20dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical">

                <Button
                    android:id="@+id/rightArrowButton"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:gravity="right"
                    android:background="@drawable/camera_retake_2_right"
                    android:alpha="0.27"
                    android:layout_marginRight="20dp"
                    />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/VOLUME_CONTROL_BAR"
        android:orientation="horizontal"
        android:background="@color/subtitle_long_back_ground_color"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_above="@+id/SUB_TITLS_VIEW"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        android:visibility="invisible"
        >

        <SeekBar
            android:id="@+id/VOLUME_SEEK_BAR"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:progressDrawable="@drawable/progress_horizontal_custom_volume_bar"
            android:maxHeight="40dp"
            android:minHeight="40dp"
            android:thumbTint="@android:color/transparent"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:id="@+id/VOLUME_SEEK_TITLE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#91ffffff"
                android:gravity="center_horizontal"

                />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
