        android:visibility="invisible"
        android:layout_above="@+id/CONTROL_WRAP_BG">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/media_controller_sleepmode_title"
                android:gravity="center_horizontal|center"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/icon_timmer"
                    android:clickable="false"
                    />
                <TextView
                    android:id="@+id/sleeptextTitle_land"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:text="Sleep Timer"
                    android:gravity="left|center"
                    android:textSize="13sp"
                    />

                <ImageView
                    android:id="@+id/sleepCancelButton_land"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|center"
                    android:background="@drawable/icon_player_close_pressed"
                    android:layout_marginRight="30dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@color/media_controller_sleepmode_subtitle_off"
