<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <!--<corners android:radius="5dip" />-->
            <gradient
                android:startColor="#6f52484f"
                android:centerColor="#6f52484f"
                android:centerY="0.50"
                android:endColor="#6f52484f"
                android:angle="270" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <!--<corners android:radius="5dip" />-->
                <gradient
                    android:startColor="#26c281"
                    android:endColor="#26c281"
                    android:angle="90" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <!--<corners android:radius="5dip" />-->
                <gradient
                    android:startColor="#26c281"
                    android:endColor="#26c281"
                    android:angle="90" />
            </shape>
        </clip>
    </item>
</layer-list>