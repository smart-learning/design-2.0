<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/PLAYLISTITEM"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/last_view_list_background_color"
    >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="52dp"
                android:layout_height="20dp"
                android:layout_gravity="center_horizontal|center"
                android:orientation="vertical"
                android:background="#872f40">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:layout_gravity="center_horizontal|center"
                    android:lineSpacingExtra="0sp"

                    android:text="미리듣기"
                    android:textColor="#ffffff"
                    />

            </LinearLayout>
            <TextView
                android:text=">"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/titleTxtSplit"
                android:ellipsize="end"

                android:paddingTop="16dp"
                android:paddingBottom="15dp"
                android:paddingLeft="10dp"
                android:paddingRight="3dp"
                android:textSize="14sp"
                android:lineSpacingExtra="4sp"
                android:textColor="#ff4f72"
                />
            <TextView
                android:text="동영상타이틀"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/titleTxt"
                android:ellipsize="end"

                android:layout_weight="7"
                android:layout_gravity="center_horizontal|center"
                android:textColor="#ff4f72"

                android:paddingTop="16dp"
                android:paddingBottom="15dp"

                android:textSize="14sp"
                android:lineSpacingExtra="5sp"
                android:paddingRight="4dp"
                />

            <ImageView
                android:id="@+id/playbtnimageview"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:paddingTop="17dp"
                android:paddingBottom="8dp"
                android:layout_gravity="center|center_horizontal"
                android:background="@drawable/icon_audiobook_play_half_filled" />

            <TextView
                android:text="00:00:00"
                android:paddingLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/totalTime"

                android:paddingTop="17.5dp"
                android:paddingBottom="13.5dp"
                android:paddingRight="1dp"
                android:layout_gravity="center_horizontal|center"
                android:textSize="13sp"
                android:textColor="#9b9b9b"
                android:lineSpacingExtra="1sp"
                />

        </LinearLayout>

</LinearLayout>

